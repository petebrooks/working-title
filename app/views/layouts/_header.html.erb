<header>
  <div class="container">
    <a href="<%= root_path %>">
      <div id="logo">
        <h1>Working Title</h1>
      </div>
    </a>
    <div class="menu-container clearfix">
      <nav id="pages-nav">
        <ul>
          <li id="write-link"><%= link_to '<i class="fa fa-pencil-square-o"></i><span class="nav-text">Write</span>'.html_safe, new_project_path %></li>
          <li id="collaborate-link"><%= link_to "Collaborate", projects_path %></li>
          <li id="explore-link"><%= link_to "Explore", categories_path %></li>
        </ul>
      </nav>
      <div id="search">
        <span class="search-button fa fa-search fa-fw"></span>
        <%= form_tag("/search", id: "search-form") do %>
          <%= text_field_tag(:text, nil, {placeholder: "Search", autofocus: true}) %>
        <% end %>
      </div>
      <nav id="session-nav">
        <ul>
          <% if current_user %>
            <li><%= link_to '<i class="fa fa-user"></i>'.html_safe, user_path(current_user) %></li>
            <li><%= link_to '<i class="fa fa-sign-out"></i>'.html_safe, signout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to '<i class="fa fa-sign-in"></i>'.html_safe, signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
